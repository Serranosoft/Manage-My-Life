<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="64dp"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    android:background="@mipmap/login_background4"
    tools:context=".Activities.LoginActivity">

    <ImageView
        android:src="@mipmap/logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center_horizontal" />

    <ImageView
        android:id="@+id/information_slider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/information"
        android:layout_gravity="end"/>
    <ImageView
        android:id="@+id/settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/settings"
        android:layout_gravity="start"/>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:textColorHint="@color/black">

            <EditText android:id="@+id/login_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:hint="@string/usuario"
                android:textColorHint="@color/black"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:textColorHint="@color/black">
            <EditText android:id="@+id/login_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:hint="@string/contrasena"
                android:textColorHint="@color/black"/>
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/login_boton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/colorSelected"
            android:background="@color/background_profile"
            android:text="@string/login"/>

        <TextView android:id="@+id/login_registrarse"
            android:textColor="@color/black"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/NoCuenta"
            android:gravity="center"
            android:textSize="16dip"/>

</LinearLayout>
