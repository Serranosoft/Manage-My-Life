<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="270dp"
    android:background="#5f7ae2"
    android:padding="5dp"
    android:layout_gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/crearGasto"
            android:layout_marginLeft="8dp"
            android:textColor="@color/colorSelected"/>

        <TextView
            android:id="@+id/insertar_gasto_close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:textColor="@color/colorSelected"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="X"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="8dp">
        <EditText
            android:id="@+id/insertar_nombre_gasto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/NombreDelGasto"
            android:textStyle="bold"
            android:textColor="@color/colorSelected"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:textSize="24sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/insertar_finanza_categoria"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#4363db">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Tipo"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:textColor="#E3E4DB"/>

        <TextView
            android:id="@+id/insertar_finanza_categoria_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Producto"
            android:textColor="#E3E4DB"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_marginTop="16dp"/>

    <ImageView
        android:id="@+id/insertar_aceptar_gasto"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center"
        android:src="@mipmap/checked"/>

</LinearLayout>